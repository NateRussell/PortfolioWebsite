@using PortfolioWebsite.Constants

@model PortfolioWebsite.Models.Comment


@{
    string entryPoint = "";
    if (ViewData.Keys.Contains("ParentID"))
    {
        entryPoint = "#Replies_For_Comment_" + ViewData["ParentID"].ToString();
    }
    else
    {
        entryPoint = "#Comments";
    }
}

<form method="post" asp-controller="Comments" asp-action="Create" data-ajax="true" data-ajax-url="@Url.Action("Create", "Comments", new { response = ResponseTypes.AJAX })" data-ajax-update="@entryPoint" data-ajax-mode="before">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <input asp-for="Text" class="form-control" />
        <span asp-validation-for="Text" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input asp-for="WorkID" class="form-control" asp-items="ViewBag.WorkID" value="@ViewData["WorkID"]" />
        @if (ViewData.Keys.Contains("ParentID"))
        {
            <input asp-for="ParentID" class="form-control" asp-items="ViewBag.ParentID" value="@ViewData["ParentID"]" />
            <input type="submit" value="Reply" class="btn btn-default" />
        }
        else
        {
            <input type="submit" value="Create" class="btn btn-default" />
        }
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
