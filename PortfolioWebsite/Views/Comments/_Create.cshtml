@model PortfolioWebsite.Models.Comment

<div class="create_comment">
    <form asp-controller="Comments" asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <input asp-for="Text" class="form-control" />
            <span asp-validation-for="Text" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="WorkID" class="form-control" asp-items="ViewBag.WorkID" value="@ViewData["WorkID"]" />
            @if (ViewData.Keys.Contains("ParentID"))
            {
                <input asp-for="ParentID" class="form-control" asp-items="ViewBag.ParentID" value="@ViewData["ParentID"]" />
                <input type="submit" value="Reply" class="btn btn-default" />
            }
            else
            {
                <input type="submit" value="Create" class="btn btn-default" />
            }
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
